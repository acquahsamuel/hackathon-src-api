      <div class="logo">
        <a href="" class="">
          <i class="fa fa-cube"></i>Sams
        </a>
      </div>
      <div class="header__right d-flex align-items-center gap-2">
        <div class="icon">
          <i class="fa fa-th-large"></i>
        </div>
        <div class="icon">
          <i class="fa fa-bell-o"></i>
        </div>
        <div class="d-flex align-items-center gap-3 profile">
